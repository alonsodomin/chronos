# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                       @controllers.Application.index

GET        /repository             @controllers.JobRepositoryController.index

GET        /repository/jobs        @controllers.JobRepositoryController.jobs

GET        /scheduler              @controllers.SchedulerController.index

GET        /scheduler/jobs         @controllers.SchedulerController.schedules

# Versioned assets
GET        /vassets/*file          controllers.Assets.versioned(path = "/public", file: Asset)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file           controllers.Assets.at(path="/public", file)

# WebJars
GET        /webjars/*file          controllers.WebJarAssets.at(file)
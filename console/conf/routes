# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                                 @controllers.Application.index

GET        /repository                       @controllers.JobRepositoryController.index

GET        /repository/jobs                  @controllers.JobRepositoryController.jobs

GET        /scheduler                        @controllers.SchedulerController.index

GET        /scheduler/jobs                   @controllers.SchedulerController.schedules

GET        /executions                       @controllers.ExecutionController.index

GET        /executions/history               @controllers.ExecutionController.executions

GET        /executions/socket                @controllers.ExecutionController.executionsWs

# Versioned assets
GET        /vassets/*file                    controllers.Assets.versioned(path = "/public", file: Asset)

GET        /assets/javascripts/routes        @controllers.Application.javascriptRoutes

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                     controllers.Assets.at(path="/public", file)

# WebJars
GET        /webjars/*file                    controllers.WebJarAssets.at(file)